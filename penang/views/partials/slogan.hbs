{{!-- tailwindCSS에서 직접 지정한 slogan-color로 배경색을 구성했습니다 --}}
<div class="bg-slogan-color h-80 w-full flex flex-col pl-36 mb-20">
  <div class="my-auto">
    <button class="font-semibold w-72 text-sm text-white border-2 border-white rounded-3xl px-4 py-1 mb-3">
      {{sloganTitle}}
    </button>
    {{#each sloganDesc}}
    <div class="font-bold text-3xl text-white my-1">
      {{this}}
    </div>
    {{/each}}
    <div class="font-semibold text-xs text-white mt-5">
      {{sloganFooter}}
    </div>
  </div>
</div>